<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.40" fx:controller="sonicScream.controllers.MainController">
    <children>
        <TabPane fx:id="MainTabPane" id="TabPane" tabClosingPolicy="SELECTED_TAB" VBox.vgrow="ALWAYS">            
        </TabPane>    
        <HBox alignment="BOTTOM_CENTER" >
            <Button text="Play"  />
            <Button text="Replace" onAction="#handleReplaceButtonAction"/>
            <Button text="Revert"/> 
            <Button fx:id="toFileButton" text="To file" onAction="#handleToFileButtonAction"/>
            <Button fx:id="changeVPKButton" text="Find VPK" onAction="#handleFindVPKButtonAction"/>
            <Button fx:id="showProfileDialog" text="Choose Profile" onAction="#handleProfileButtonAction"/>            
        </HBox>   
    </children>
</VBox>
